@model IEnumerable<DBContex.Models.Tag>

<h1>Список тегов</h1>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <form action="@Url.Action("Edit", "Tags")" method="GET" style="display:inline-block;">
                        <input type="hidden" name="tag" value="@tag.Id" />
                        <button type="submit" class="btn-edit"><i class="fa fa-pencil-alt"></i></button>
                    </form>
                    <form method="post" asp-action="Delete" asp-controller="Tags" style="display:inline-block;">
                        <input type="hidden" name="id" value="@tag.Id" />
                        <button type="submit" class="btn-delete"><i class="fa fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <form asp-action="Add" method="post">
        <label for="tagNameInput">Введите имя тега:</label>
        <input type="text" id="tagNameInput" name="tagName" />
        <button type="submit" class="btn btn-primary">Добавить новый тег</button>
    </form>
</div>