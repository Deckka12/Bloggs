@using Microsoft.AspNetCore.Identity
@model Bloggs.Models.ViewModel.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach(Microsoft.AspNetCore.Identity.IdentityRole role in Model.AllRoles)
        {
                <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
        <div class="form-group">
            <label class="label" for="email">Фамилия</label>
            <input type="text" name="FirstName" value="@Model.FirstName" />
        </div>
        <div class="form-group">
            <label class="label" for="email">Отчество</label>
            <input type="text" name="LastName" value="@Model.LastName" />
        </div>
        <div class="form-group">
            <label class="label" for="email">Пароль</label>
            <input type="text" name="Password" value="@Model.Password" />
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>